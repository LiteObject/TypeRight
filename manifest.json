{
  "manifest_version": 3,
  "name": "TypeRight",
  "version": "1.0.0",
  "description": "Real-time AI-powered grammar checker that offers natural alternatives as you type",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": "icons/icon.png",
    "default_title": "TypeRight - Grammar Checker"
  },
  "icons": {
    "128": "icons/icon.png"
  }
}
